<h3 class="center"> Pending Requests</h3>
<%- include ('partials/nav') %>
<%- include ('partials/messages') %>
<div class="row">
  <div class="col-md-12 m-auto">
    <div class="card card-body">
      <h5 class="center text-success">Pending Recipients</h5>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-md-12 m-auto">
    <div class="card card-body">
      <% if(requests) {%>
        <% if(requests.length === 0) {%>
            <div class="row">
                <div class="col-md-12 m-auto">
                    <div class="card card-body">
                        <h5 class="center text-success">No Pending Blood Recipients</h5>
                    </div>
                </div>
            </div>
            <% }%>
        <% requests.forEach(request => {%>
      <table>
        <tr>
          <th>Name</th>
          <th>Blood Group</th>
          <th>Location</th>
          <th>Phone Number</th>
          <th>Receive ?</th>
          <th>Confirm Receipt</th>
        </tr>
            <tr>
              <td><%= request.fullName %></td>
              <td><%= request.bloodGroup %></td>
              <td><%= request.location %></td>
              <td><%= request.phoneNumber %></td>
              <td><%= request.received %></td>
              <td><a class="text-success" onclick="window.location='/users/pendingr/<%= request._id%>';" style="cursor: pointer;"><i class="fa fa-check-square" aria-hidden="true"></i></a></td>
            </tr>
      </table>
      <% }) %>
    <% } %>
    </div>
  </div>
  </div>
  </div>
</div>