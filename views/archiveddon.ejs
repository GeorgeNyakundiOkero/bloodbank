
<h3 class="center"> Archived Donations</h3>
<%- include ('partials/nav') %>
<div class="row">
  <div class="col-md-12 m-auto">
    <div class="card card-body">
      <h5 class="center text-success">Archived Donors</h5>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-md-12 m-auto">
    <div class="card card-body">
      <% if(donations) {%>
        <% donations.forEach(donation => {%>
      <table>
        <tr>
          <th>Name</th>
          <th>Blood Group</th>
          <th>Location</th>
          <th>Phone Number</th>
          <th>Donated ?</th>
        </tr>
            <tr>
              <td><%= donation.fullName %></td>
              <td><%= donation.bloodGroup %></td>
              <td><%= donation.location %></td>
              <td><%= donation.phoneNumber %></td>
              <td><%= donation.donated %></td>
            </tr>
      </table>
      <% }) %>
    <% } %>
    </div>
  </div>
  </div>
  </div>
</div>


