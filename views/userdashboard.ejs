<h3 class="center"> Update your information</h3>
<%- include ('partials/messages') %>
<div class="row">
    <div class="col-md-8 m-auto">
        <div class="card card-body">
            <form action="/users/updateinfo" method="POST">
                <div class="form-group">
                  <label for="fullname">Full Name</label>
                  <input
                    type="name"
                    id="fullname"
                    name="fullName"
                    class="form-control"
                    placeholder="Enter Your Full Name"
                    value="<%= typeof name != 'undefined' ? name : '' %>"
                    autocomplete="off"
                  />
                </div>
                <div class="form-group">
                  <label for="id">ID Number</label>
                  <input
                    type="text"
                    id="id"
                    name="id"
                    class="form-control"
                    placeholder="Enter Your ID Number"
                    autocomplete="off"
                  />
                </div>
                <div class="form-group">
                  <label for="bloodgroup">Blood Group</label>
                  <select name="bloodGroup" id="bloodgroup" class="form-control">
                    <option value="">options</option>
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="O">O</option>
                    <option value="AB">AB</option>
                    <option value="not sure">Not Sure</option>
                </select>
                </div>
                <div class="card card-body">
                    <div class="form-group">
                        <label  for="rh">Rh Factor</label>
                                <p>
                                    <label class="float-left">
                                        <input class="form-control" value="positive" name="rh" id="rh" type="radio" />
                                        <span class="">Positive</span>
                                    </label>
                                </p>
                                <p>
                                    <label class="float-right">
                                        <input class="form-control" value="negative" name="rh" id="rh" type="radio" />
                                        <span class="">Negative</span>
                                    </label>
                                </p>		
                    </div>
                </div>
                <div class="form-group">
                    <label for="phoneNumer">Phone Number</label>
                    <input
                      type="text"
                      id="phoneNumber"
                      name="phoneNumber"
                      class="form-control"
                      placeholder="Enter Your Phone Number"
                      value="<%= typeof name != 'undefined' ? name : '' %>"
                      autocomplete="off"
                    />
                  </div>
                  <div class="form-group">
                    <label for="city">Your City</label>
                    <select name="city" id="city" class="form-control">
                      <option value="">Select</option>
                      <option value="NAIROBI">Nairobi</option>
                      <option value="MOMBASA">Mombasa</option>
                      <option value="KISUMU">Kisumu</option>
                      <option value="MACHAKOS">Machakos</option>
                      <option value="THIKA">Thika</option>
                      <option value="NAKURU">Nakuru</option>
                      <option value="KISII">Kisii</option>
                      <option value="MERU">Meru</option>
                  </select>
                  </div>
                  <div class="form-group">
                    <label for="address">Your Address</label>
                    <input
                      type="text"
                      id="address"
                      name="address"
                      class="form-control"
                      placeholder="Enter Your Address"
                      value="<%= typeof name != 'undefined' ? name : '' %>"
                      autocomplete="off"
                    />
                  </div>
                  <div class="form-group">
                      <input type="submit" class="form-control btn btn-info" value="Update Information"/>
                  </div>
                  
                </form>  
        </div>
    </div>
</div>