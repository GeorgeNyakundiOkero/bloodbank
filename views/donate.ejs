<h3 class="center"> Notify The Blood Bank If You Want To Donate</h3>
<%- include ('partials/usernav') %>
<%- include ('partials/messages') %>

<div class="row mt-4">
    <div class="col-md-7 m-auto">
        <div class="card card-body">
            <h5 class="center">
                Thank You for getting this far. Fill in the form to notify us.
                The admin near you will contact you.  
            </h5>
        </div>
    </div>
</div>
<div class="row mt-4">
    <div class="col-md-10 m-auto">
        <div class="card card-body ">
            <form action="/blood/donate" method="POST">
                <div class="col-md-8 m-auto">
                    <div class="form-group">
                        <label for="fullName">Full Name</label>
                        <input name="fullName" id="fullName" class="form-control" type="text" placeholder="Enter Your Full Name" autocomplete="off">
                    </div>
                
                    <div class="form-group">
                        <label for="bloodgroup">Blood Group</label>
                        <select name="bloodGroup" id="bloodgroup" class="form-control">
                          <option value="">options</option>
                          <option value="A">A</option>
                          <option value="B">B</option>
                          <option value="O">O</option>
                          <option value="AB">AB</option>
                          <option value="not sure">Not Sure</option>
                      </select>
                      </div>
                    <div class="form-group ">
                        <label for="location">Which Location You Want To  Donate From?</label>
                        <select name="location" id="location" class="form-control">
                          <option value="">Select</option>
                          <option value="NAIROBI">Nairobi</option>
                          <option value="MOMBASA">Mombasa</option>
                          <option value="KISUMU">Kisumu</option>
                          <option value="MACHAKOS">Machakos</option>
                          <option value="THIKA">Thika</option>
                          <option value="NAKURU">Nakuru</option>
                          <option value="KISII">Kisii</option>
                          <option value="MERU">Meru</option>
                      </select>
                      </div>
                      <div class="form-group ">
                        <label for="phoneNumer">How You can Be Reached</label>
                        <input
                          type="text"
                          id="phoneNumber"
                          name="phoneNumber"
                          class="form-control"
                          placeholder="Enter Your Phone Number You Can Be Reached"
                          autocomplete="off"
                        />
                      </div>
                      <div class="form-group">
                          <input class="form-control btn btn-danger" type="submit" value="Notify Blood Bank">
                      </div>
                </div>
            </form>
        </div>
    </div>
</div>
