<h3 class="center"> Edit Information Card</h3>

<%- include ('partials/nav') %>
<%- include ('partials/messages') %>
<% if(userinfo) { %>
    <div class="row">
        <div class="col-md-6 m-auto">
            <div class="card card-body mt-4">
                <form action="/edit/user/<%= userinfo._id%>" method="POST">
                    <div class="form-group">
                      <label for="fullname">Full Name</label>
                      <input
                        type="name"
                        id="fullname"
                        name="fullName"
                        class="form-control"
                        placeholder="Enter Your Full Name"
                        value="<%= userinfo.fullName %>"
                        autocomplete="off"
                      />
                    </div>
                    <div class="form-group">
                      <label for="id">ID Number</label>
                      <input
                        type="text"
                        id="id"
                        name="id"
                        class="form-control"
                        placeholder="Enter Your ID Number"
                        value="<%= userinfo.id %>"
                        autocomplete="off"
                      />
                    </div>
                    <div class="form-group">
                      <label for="bloodgroup">Blood Group</label>
                      <select name="bloodGroup" id="bloodgroup" class="form-control">
                        <option value="<%= userinfo.bloodGroup%>"><%= userinfo.bloodGroup%></option>
                        <option value="A">A</option>
                        <option value="B">B</option>
                        <option value="O">O</option>
                        <option value="AB">AB</option>
                        <option value="not sure">Not Sure</option>
                    </select>
                    </div>
                        <div class="form-group">
                            <label  for="rh">Rh Factor</label>
                            <select name="rh" id="rh" class="form-control">
                                <option value="<%= userinfo.rh%>"><%= userinfo.rh%></option>
                                <option value="positive">Positive</option>
                                <option value="negative">Negative</option>
                            </select>		
                        </div>
                    <div class="form-group">
                        <label for="phoneNumer">Phone Number</label>
                        <input
                          type="text"
                          id="phoneNumber"
                          name="phoneNumber"
                          class="form-control"
                          placeholder="Enter Your Phone Number"
                          value="<%= userinfo.phoneNumber %>"
                          autocomplete="off"
                        />
                      </div>
                      <div class="form-group">
                        <label for="city">Your City</label>
                        <select name="city" id="city" class="form-control " >
                          <option value="<%= userinfo.city%>"><%= userinfo.city%></option>
                          <option value="NAIROBI">Nairobi</option>
                          <option value="MOMBASA">Mombasa</option>
                          <option value="KISUMU">Kisumu</option>
                          <option value="MACHAKOS">Machakos</option>
                          <option value="THIKA">Thika</option>
                          <option value="NAKURU">Nakuru</option>
                          <option value="KISII">Kisii</option>
                          <option value="MERU">Meru</option>
                      </select>
                      </div>
                      <div class="form-group">
                        <label for="address">Your Address</label>
                        <input
                          type="text"
                          id="address"
                          name="address"
                          class="form-control"
                          placeholder="Enter Your Address"
                          value="<%= userinfo.address %>"
                          autocomplete="off"
                        />
                      </div>
                      <div class="form-group">
                          <input type="submit" class="form-control btn btn-info" value="Save Information"/>
                      </div>
                      
                    </form>  
                    <a href="/users/usercard"class="btn btn-warning  mt-4">Go Back</a>
                
            </div>
        </div>
    </div>
<% } %>
    
